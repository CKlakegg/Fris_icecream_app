<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context=".ui.main.order.OrderFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bakso_sapi"
        android:text="VÆR SÅ GOD!"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ice_cream_order"
        android:layout_width="@dimen/icon_order"
        android:layout_height="@dimen/icon_order"
        android:layout_marginTop="@dimen/margin_icon_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/icon_icecream" />

    <TextView
        android:id="@+id/textView_ice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/recoleta_"
        android:text="is"
        android:textColor="@color/redpink"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ice_cream_order" />

    <ImageView
        android:id="@+id/shakes_order"
        android:layout_width="112dp"
        android:layout_height="129dp"
        android:layout_marginTop="@dimen/margin_icon_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_ice"
        app:srcCompat="@drawable/icon_shakes" />


    <TextView
        android:id="@+id/textView_shakes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/recoleta_"
        android:text="shakes"
        android:textColor="@color/redpink"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shakes_order" />

    <ImageView
        android:id="@+id/coffe_order"
        android:layout_width="@dimen/icon_order"
        android:layout_height="@dimen/icon_order"
        android:layout_marginTop="@dimen/margin_icon_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_shakes"
       app:srcCompat="@drawable/icon_coffe" />

    <TextView
        android:id="@+id/textVie_coffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/recoleta_"
        android:text="kaffe"
        android:textColor="@color/redpink"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffe_order" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginTop="@dimen/margin_icon_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVie_coffe"
        app:srcCompat="@drawable/back_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>