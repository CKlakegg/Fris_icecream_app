<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    tools:context=".ui.main.contact.ContactFragment">


    <TextView
        android:id="@+id/contact_info_textView"
        android:layout_width="346dp"
        android:layout_height="143dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/bakso_sapi"
        android:text="vi pleier å være på rådhusplassen fra 13:00 til 21:00 men sjekk"
        android:textAlignment="center"
        android:textColor="@color/redpink"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/her_textview"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:fontFamily="@font/bakso_sapi"
        android:text="Her"
        android:textColor="@color/blue"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_textView" />

    <View
        android:id="@+id/view"
        android:layout_width="55dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/her_textview" />

    <TextView
        android:id="@+id/contact_info_textView2"
        android:layout_width="228dp"
        android:layout_height="77dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bakso_sapi"
        android:text="hvor vi er denne uken"
        android:textAlignment="center"
        android:textColor="@color/redpink"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/her_textview" />


    <ImageView
        android:id="@+id/icon_insta"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginTop="68dp"
        android:layout_marginRight="@dimen/margin_icons"
        app:layout_constraintEnd_toStartOf="@+id/icon_mail"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_textView2"
        app:srcCompat="@drawable/fris_some_insta" />

    <ImageView
        android:id="@+id/icon_mail"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginLeft="@dimen/margin_icons"
        android:layout_marginRight="@dimen/margin_icons"
        app:layout_constraintBottom_toTopOf="@+id/back_button_contact"
        app:layout_constraintEnd_toEndOf="@+id/contact_info_textView2"
        app:layout_constraintStart_toStartOf="@+id/contact_info_textView2"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_textView2"
        app:srcCompat="@drawable/fris_some_mail" />

    <ImageView
        android:id="@+id/icon_facebook"
        android:layout_width="84dp"
        android:layout_height="83dp"
        android:layout_marginLeft="@dimen/margin_icons"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toEndOf="@+id/icon_mail"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_textView2"
        app:srcCompat="@drawable/fris_some_face" />

    <ImageView
        android:id="@+id/back_button_contact"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_textView2"
        app:layout_constraintVertical_bias="0.96"
        app:srcCompat="@drawable/back_arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>